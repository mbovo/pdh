{
  "$schema": "https://raw.githubusercontent.com/jetpack-io/devbox/0.10.1/.schema/devbox.schema.json",
  "packages": [
    "go-task@latest",
    "python@3.11",
    "poetry@latest",
    "docker@latest",
    "pre-commit@latest",
    "cachix@latest",
    "statix@latest"
  ],
  "shell": {
    "init_hook": [
      "task setup",
      "source .venv/bin/activate",
      "poetry install"
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}
